<!DOCTYPE html>
<html>
  <link rel="stylesheet" href="styles.css">
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/521db94061.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class= "nav-item text-light">
                <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-house white-icon"></i> Home
                <% end %>
              </li>
              <li class= "nav-item">
                <%= link_to users_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-users white-icon"></i> Users
                <% end %>
              </li>
              <li class= "nav-item">
                <%= link_to books_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-book-open white-icon"></i> Books
                <% end %>
              </li>
              <li class= "nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-right-from-bracket white-icon"></i> Log out
                <% end %>
              </li>
              <% else %>
              <li class= "nav-item">
                <%= link_to root_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-house white-icon"></i> Home
                <% end %>
              </li>
              <li class= "nav-item">
                <%= link_to about_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-link white-icon"></i> About
                <% end %>
              </li>
              <li class= "nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-user-plus white-icon"></i> Sign up
                <% end %>
              </li>
              <li class= "nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
                  <i class="fa-solid fa-right-to-bracket white-icon"></i> Log in
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <% flash.each do |message_type, message| %>
        <div class ="flash-message <%= message_type %>"><%= message %></div>
      <% end %>
      <p id="notice"></p>
    <%= yield %>
    </main>
    <footer class="pt-5">
      <div class="container text-center">
        <pã€€class="m-0">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
